CC:=gcc
CFLAGS:=-std=c99 -D_GNU_SOURCE -Wall -Wextra
LDFLAGS:=

.PHONY: default clean install uninstall test runtests

default: sugo

sugo: sugo.o test.o tests.o
	$(CC) -o $@ $(LDFLAGS) $^

sugo.o: $(PDIR)/sugo.c $(PDIR)/sugo.h $(PDIR)/test.h $(PDIR)/tests.h
	$(CC) -c -o $@ $(CFLAGS) $<

test.o: $(PDIR)/test.c $(PDIR)/test.h
	$(CC) -c -o $@ $(CFLAGS) $<

tests.o: $(PDIR)/tests.c $(PDIR)/tests.h $(PDIR)/test.h
	$(CC) -c -o $@ $(CFLAGS) $<

test: sugo runtests

TESTS:=test-tests-1 test-tests-2 test-tests-3

runtests: $(TESTS)
	sugo $^

test-tests-%: $(PDIR)/test-tests-%.c tests.o test.o $(PDIR)/tests.h $(PDIR)/test.h $(PDIR)/sugo.h
	$(CC) -o $@ $(CFLAGS) $(LDFLAGS) $< tests.o test.o

clean:
	-rm sugo sugo.o test.o tests.o $(TESTS)

install: sugo $(PDIR)/sugo.h
	install -D sugo $(PREFIX)/bin/sugo
	install -m 644 -D $(PDIR)/sugo.h $(PREFIX)/include/sugo.h

uninstall:
	-rm $(PREFIX)/bin/sugo
	-rm $(PREFIX)/include/sugo.h

reconfigure:
	$(PDIR)/configure $(CONFIG_OPTIONS)
