CC := gcc
CFLAGS := -std=c99 -D_GNU_SOURCE
ifeq ($(variant),release)
	CFLAGS += -O2 -DNDEBUG
else
	CFLAGS += -Wall -Wextra -Werror
endif
LDFLAGS :=

.PHONY : default clean install uninstall test runtests

default : sugo-init

reconfigure :
	$(PDIR)/configure $(CONFIG_OPTIONS) $(ADD_CONFIG_OPTIONS)
