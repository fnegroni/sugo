CC:=gcc
CFLAGS:=-std=c99 -D_GNU_SOURCE -Wall -Wextra
LDFLAGS:=

.PHONY: default clean install uninstall sugo configure

default: sugo

configure:
	$(PDIR)/configure

sugo: $(PDIR)/sugo.c $(PDIR)/sugo.h
	$(CC) -o $@ $(CFLAGS) $(LDFLAGS) $<

install: sugo $(PDIR)/sugo.h
	install -D sugo $(PREFIX)/bin/sugo
	install -D $(PDIR)/sugo.h $(PREFIX)/include/sugo.h

uninstall:
	rm $(PREFIX)/bin/sugo
	rm $(PREFIX)/include/sugo.h

clean:
	rm -f sugo
